{% extends "base.jinja" %}

{% block title %}
  Movies Form
{% endblock title %}

{% block main %}
  <form action="{{ paths.movies_api }}" method="get">
    <label for="search_title">Title for searching of films</label>
    <input id="search_title" type="text" name="search_title" pattern=".{1,64}" required>
    <button type="submit">Find</button>
  </form>
{% endblock main %}
